<div class="container-fluid" style="margin-top: 4%">
  <h1 class=" text-center">Messaging</h1>
  <div class="messaging">
    <div class="inbox_msg">
      <% let userName = "", userImage = ""%>
        <div class="inbox_people">
          <div class="headind_srch">
            <div class="recent_heading">
              <h4>Recent</h4>
            </div>
          </div>
          <div class="inbox_chat">
            <%chatUser.forEach(function(data, key) {%>
              <a href="messages?clientId=<%= (userId == data.receiverId)?data.senderId:data.receiverId%>">
                <div class="chat_list <%= (userId == data.receiverId || userId == data.senderId)?'active_chat':''%>" id="chat<%= key%>">
                  <%if(userId == data.receiverId){userName = data.senderName; userImage = data.senderImage;}else{userName=data.receiverName,userImage=data.receiverImage}%>
                  <div class="chat_people">
                      <%if(userImage) {%>
                        <div class="chat_img"> <img src="/uploads/users/<%= userImage%>" alt="<%= userName%>"> </div>
                      <%}else{%>
                        <div class="chat_img"> <img src="https://ptetutorials.com/images/user-profile.png" alt="Image"> </div>
                      <%}%>
                    <div class="chat_ib">
                      <h5><%= userName%> </h5>
                      <p>Test, which is a new approach to have all solutions astrology under one roof.</p>
                    </div>
                  </div>
                </div>
              </a>
            <%})%>

          </div>
        </div>
        <%if(receiverId){let currentName = "",currentImage = "";%>
          <%
            chatUser.forEach(function(data) {
              if(receiverId == data.senderId) {
                currentName = data.senderName;
                currentImage = data.senderImage;
              }
              if(receiverId == data.receiverId) {
                currentName = data.receiverName;
                currentImage = data.receiverImage;
              }
            });
          %>
          <div class="mesgs">
            <h4 style="padding-bottom: 12px;border-bottom: 1px solid #ccc;margin-top: -3%;color:#05728f"><%= currentName%> <span style="float: right;"><a href="/messages?clientId=<%= receiverId%>"><i class="fa fa-sync-alt"></i></span></a></h4>
            <div class="msg_history" style="padding-top: 12px;">

              <%messages.forEach(function(data) {%>
                <%if(receiverId == data.senderId){%>
                  <div class="incoming_msg">
                    <%if(currentImage){%>
                      <div class="incoming_msg_img"> <img src="/uploads/users/<%= currentImage%>" alt="<%= currentName%>" style="border-radius: 20px;"> </div>
                    <%}else{%>
                      <div class="chat_img"> <img src="https://ptetutorials.com/images/user-profile.png" alt="Image" style="width: 50%"> </div>
                    <%}%>
                      <div class="received_msg">
                          <div class="received_withd_msg">
                              <p><%= data.message%></p>
                          </div>
                      </div>
                  </div>
                <%}else{%>
                  <div class="outgoing_msg">
                    <div class="sent_msg">
                      <p><%= data.message%></p>
                    </div>
                  </div>
                <%}%>
              <%})%>
            </div>
            <div class="type_msg">
              <div class="input_msg_write">
                <form id="sendMessage">
                  <input type="hidden" value="<%= receiverId%>" id="receiverId">
                  <input type="text" class="write_msg" id="message" placeholder="Type a message" />
                  <button class="msg_send_btn" type="submit"><i class="fa fa-paper-plane" aria-hidden="true"></i></button>
                </form>
              </div>
            </div>
          </div>
          <%}%>
    </div>
  </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js" type="text/javascript"></script>
<script>
  $(function() {
    $('.msg_history').animate({ scrollTop: $('.msg_history').height()}, 500);
    $('#sendMessage').submit(function(event){
		    event.preventDefault();
        let receiverId = $('#receiverId').val();
        let message = $('#message').val().trim();
        if(message.length > 0) {
          $('.msg_history').animate({ scrollTop: $('.msg_history').height()}, 500);
          $('.msg_history').append('<div class="outgoing_msg"><div class="sent_msg"><p>'+message+'</p></div></div>')
          $('#message').val('');
          $.ajax({
            url: '/messages/send',
            method: 'POST',
            data: {
              receiverId,
              message
            },
            dataType: 'json',
            success: function(data) {
              console.log(data);
            }
          })
        }
    });

  })
</script>
