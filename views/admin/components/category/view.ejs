<section>
  <div class="content-wrapper">
    <div class="content-heading">
      <%- include('../../includes/language.ejs') -%>
      <span data-localize="category.VIEW.HEAD">View Categories</span>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th data-localize="category.VIEW.SNO">S.no</th>
                    <th data-localize="category.VIEW.CATEGORY">Category Name</th>
                    <th>#</th>
                  </tr>
                </thead>
                <tbody>
                  <% category.forEach(function(data, key) {%>
                    <script language="javascript">
                      function delete<%= data._id%>(){
                        swal({
                          title: "Are you sure?",
                          text: "Are you sure that you want to delete category?",
                          icon: "warning",
                          dangerMode: true,
                        })
                        .then(willDelete => {
                          if (willDelete) {
                            location='/admin/category/delete?id=<%= data._id%>';
                          }
                        });
                      }
                    </script>
                    <tr>
                      <td><%= key+1%></td>
                      <td><%= data.name%></td>
                      <td><a onclick="delete<%= data._id%>()" class="btn btn-danger" data-localize="category.VIEW.REMOVE-BUTTON">Remove</a></td>
                    </tr>
                  <%})%>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
